<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="300 seconds">

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/var/log/demo/demo.log</File>
        <encoder>
            <pattern>
                %date{yyyy-MM-dd HH:mm:ss.SSS}[%-5level][%thread][%X{request.uuid}][%X{remote.addr}]%logger{96}.%method [%line] - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/var/log/demo/demo_%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>64 MB</maxFileSize>
            <maxHistory>20</maxHistory>
        </rollingPolicy>
    </appender>

    <root level="info">
        <appender-ref ref="FILE"/>
    </root>

</configuration>